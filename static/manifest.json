{
  "name": "Code Review Inbox",
  "description": "Browser extension that lets you stay on top of your code reviews, all with just a few clicks.",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Code Review Inbox",
    "default_icon": "favicon.png",
    "default_popup": "index.html?popup"
  },
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "alarms"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self'"
  },
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  }
}
